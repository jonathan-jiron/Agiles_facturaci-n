@namespace UI.Shared
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Routing

@code {
    [Parameter] public bool Minimizado { get; set; }
}

<nav class="sidenav">
    <div class="brand">
        <div class="logo">FZ</div>
        @if (!Minimizado)
        {
            <span class="title">Facturaci√≥n</span>
        }
    </div>
    <div class="menu-icons @(Minimizado ? "minimizado" : "")">
        <ul class="nav flex-column">
            <li class="nav-item">
                <NavLink class="nav-link menu-link" href="/" Match="NavLinkMatch.All">
                    <i class="fa-solid fa-gauge"></i>
                    @if (!Minimizado) { <span class="menu-text">Dashboard</span> }
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link menu-link" href="/clientes" Match="NavLinkMatch.Prefix">
                    <i class="fa-solid fa-users"></i>
                    @if (!Minimizado) { <span class="menu-text">Clientes</span> }
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link menu-link" href="/productos" Match="NavLinkMatch.Prefix">
                    <i class="fa-solid fa-box-open"></i>
                    @if (!Minimizado) { <span class="menu-text">Productos</span> }
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link menu-link" href="/facturacion" Match="NavLinkMatch.All">
                    <i class="fa-solid fa-file-invoice"></i>
                    @if (!Minimizado) { <span class="menu-text">Nueva Factura</span> }
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link menu-link" href="/facturas" Match="NavLinkMatch.Prefix">
                    <i class="fa-solid fa-list"></i>
                    @if (!Minimizado) { <span class="menu-text">Mis Facturas</span> }
                </NavLink>
            </li>
        </ul>
    </div>
    <div class="footer">
        <small>v1.0</small>
    </div>
</nav>

<style>
.sidenav {
    display: flex;
    flex-direction: column;
    height: 100%;
    align-items: stretch;
    padding-top: 24px;
}

.brand {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 18px;
}

.logo {
    background: rgba(255,255,255,0.2);
    color: #fff;
    font-weight: bold;
    font-size: 1.3rem;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 8px;
}

.title {
    color: #fff;
    font-weight: 600;
    font-size: 1.1rem;
    letter-spacing: 0.5px;
}

.menu-icons {
    margin-top: 0;
    margin-bottom: auto;
    width: 100%;
}
.menu-icons.minimizado {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.menu-link {
    color: #f8f9fa !important;
    font-weight: 500;
    font-size: 1.08rem;
    border-radius: 8px;
    padding: 12px 18px;
    margin: 16px 0;
    display: flex;
    align-items: center;
    transition: background 0.2s, color 0.2s;
    text-align: left;
    justify-content: flex-start;
    width: 100%;
    box-sizing: border-box; 
    margin-left: 0; 
    margin-right: 0;
}
.menu-icons.minimizado .menu-link {
    justify-content: center;
    align-items: center;
    width: 100%;
    padding: 0;
    margin: 16px 0;
    background: none;
}

.menu-icons.minimizado .menu-link.active,
.menu-icons.minimizado .menu-link:hover {
    background: none;
}

.menu-icons.minimizado .menu-link.active i,
.menu-icons.minimizado .menu-link:hover i {
    background: rgba(255,255,255,0.18);
    border-radius: 50%;
    padding: 12px;
    transition: background 0.2s;
}

.menu-link:hover, .menu-link.active {
    background: rgba(255,255,255,0.18);
    color: #fff !important;
}
.menu-link.active {
    background: rgba(255,255,255,0.32);
    color: #fff !important;
}
.menu-link i {
    font-size: 1.2rem;
    color: #fff;
    margin-right: 8px;
}
.menu-text {
    margin-left: 8px;
}
.footer {
    margin-top: 32px;
    color: #fff;
    opacity: 0.7;
    font-size: 0.9rem;
    text-align: center;
}

.sidebar-modern.minimizado .toggle-btn-container,
.sidebar-modern.minimizado .brand {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
    margin: 0 0 18px 0; /* solo margen inferior si lo necesitas */
}
.sidebar-modern.minimizado .toggle-btn {
    margin: 0;
}
.sidebar-modern.minimizado .logo {
    margin: 0;
}

.sidebar-modern.minimizado .toggle-btn-container {
    padding-top: 16px;
    padding-bottom: 8px;
    margin-bottom: 18px;
}

.menu-link,
.menu-icons.minimizado .menu-link {
    margin: 16px 0;
    padding: 12px 0;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
}

.toggle-btn-container {
    padding-top: 16px;
    padding-bottom: 8px;
    display: flex;
    justify-content: center;
    align-items: center;
}



.menu-icons.minimizado .menu-link i {
    margin-left: 0px;
    margin-right: 0;
}

</style>
