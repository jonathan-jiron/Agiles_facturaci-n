@namespace UI.Shared
@using Microsoft.AspNetCore.Components.Routing

<nav class="sidenav">
  <div class="brand">
    <div class="logo">FZ</div>
    <span class="title">Facturaci√≥n</span>
  </div>

  <div class="menu">
    <NavLink class="item" href="/" Match="NavLinkMatch.All">
      <i class="fa-solid fa-gauge"></i>
      <span>Dashboard</span>
    </NavLink>

    <NavLink class="item" href="/clientes" Match="NavLinkMatch.Prefix">
      <i class="fa-solid fa-users"></i>
      <span>Clientes</span>
    </NavLink>

    <NavLink class="item" href="/productos" Match="NavLinkMatch.Prefix">
      <i class="fa-solid fa-box-open"></i>
      <span>Productos</span>
    </NavLink>

    <NavLink class="item" href="/facturacion" Match="NavLinkMatch.All">
      <i class="fa-solid fa-file-invoice"></i>
