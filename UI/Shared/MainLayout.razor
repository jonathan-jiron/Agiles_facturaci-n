@namespace UI.Shared
@inherits LayoutComponentBase
@inject UI.Services.AuthService AuthService
@inject NavigationManager Navigation

@code {
    private bool menuMinimizado = false;
    private void ToggleMenu() => menuMinimizado = !menuMinimizado;
    
    private bool mostrarMenuPerfil = false;
    private UI.Services.UsuarioInfo? usuarioActual;
    
    protected override async Task OnInitializedAsync()
    {
        usuarioActual = await AuthService.GetCurrentUser();
    }
    
    private void ToggleMenuPerfil()
    {
        mostrarMenuPerfil = !mostrarMenuPerfil;
    }
    
    private async Task CerrarSesion()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}

<div class="page-wrapper">
    <div class="sidebar-modern @(menuMinimizado ? "minimizado" : "")">
        <div class="toggle-btn-container">
            <button class="toggle-btn" @onclick="ToggleMenu" title="Minimizar menú">
                <i class="fa-solid @(menuMinimizado ? "fa-chevron-right" : "fa-chevron-left")"></i>
            </button>
        </div>
        <NavMenu Minimizado="menuMinimizado" />
    </div>
    <div class="main-content @(menuMinimizado ? "expandido" : "")">
        <div class="topbar">
            <div class="profile-menu-container">
                <button class="profile-btn" @onclick="ToggleMenuPerfil" @onclick:stopPropagation="true">
                    <i class="fa-solid fa-user-circle"></i>
                </button>
                @if (mostrarMenuPerfil)
                {
                    <div class="profile-dropdown" @onclick:stopPropagation="true">
                        <div class="profile-dropdown-header">
                            <i class="fa-solid fa-user"></i>
                            <div class="profile-info">
                                <div class="profile-name">@(usuarioActual?.Username ?? "Usuario")</div>
                                @if (!string.IsNullOrWhiteSpace(usuarioActual?.Rol))
                                {
                                    <div class="profile-role">@usuarioActual.Rol</div>
                                }
                            </div>
                        </div>
                        <div class="profile-dropdown-divider"></div>
                        <button class="profile-dropdown-item" @onclick="CerrarSesion">
                            <i class="fa-solid fa-sign-out-alt"></i>
                            <span>Cerrar Sesión</span>
                        </button>
                    </div>
                }
            </div>
        </div>
        <div class="content-area @(menuMinimizado ? "ampliado" : "")">
            @Body
        </div>
    </div>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .page-wrapper {
        display: flex;
        min-height: 100vh;
        width: 100vw;
        background: #f8f9fa;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .sidebar-modern {
        width: 270px;
        transition: width 0.2s;
        background: linear-gradient(180deg, #6a82fb 0%, #fc5c7d 100%);
        min-height: 100vh;
        box-shadow: 2px 0 8px rgba(0, 0, 0, 0.05);
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: stretch;
        overflow: hidden;
    }

    .sidebar-modern.minimizado {
        width: 72px;
    }

    .toggle-btn-container {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        padding: 16px 12px 8px 0;
    }

    .toggle-btn {
        background: rgba(255, 255, 255, 0.18);
        border: none;
        color: #fff;
        border-radius: 8px;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: background 0.2s;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        font-size: 1.3rem;
    }

    .toggle-btn:hover {
        background: rgba(255, 255, 255, 0.35);
    }

    .main-content {
        width: 100%;
        transition: margin-left 0.2s;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        position: relative;
    }
    
    .topbar {
        position: fixed;
        top: 0;
        right: 0;
        z-index: 1000;
        background: transparent;
        padding: 16px 24px;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        pointer-events: none;
    }
    
    .profile-menu-container {
        position: relative;
        pointer-events: auto;
    }
    
    .profile-btn {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        border: none;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        transition: transform 0.2s, box-shadow 0.2s;
        box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
    }
    
    .profile-btn:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }
    
    .profile-dropdown {
        position: absolute;
        top: calc(100% + 10px);
        right: 0;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        min-width: 220px;
        overflow: hidden;
        animation: slideDown 0.2s ease-out;
    }
    
    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .profile-dropdown-header {
        padding: 16px;
        display: flex;
        align-items: center;
        gap: 12px;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }
    
    .profile-dropdown-header i {
        font-size: 2rem;
        color: #667eea;
    }
    
    .profile-info {
        flex: 1;
    }
    
    .profile-name {
        font-weight: 600;
        color: #2d3748;
        font-size: 0.95rem;
        margin-bottom: 2px;
    }
    
    .profile-role {
        font-size: 0.8rem;
        color: #718096;
        text-transform: capitalize;
    }
    
    .profile-dropdown-divider {
        height: 1px;
        background: #e2e8f0;
        margin: 4px 0;
    }
    
    .profile-dropdown-item {
        width: 100%;
        padding: 12px 16px;
        border: none;
        background: none;
        text-align: left;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 12px;
        color: #2d3748;
        font-size: 0.9rem;
        transition: background 0.2s;
    }
    
    .profile-dropdown-item:hover {
        background: #f7fafc;
    }
    
    .profile-dropdown-item i {
        color: #e53e3e;
        width: 18px;
    }
    
    .profile-dropdown-item span {
        flex: 1;
    }

    .sidebar-modern::-webkit-scrollbar {
        width: 6px;
    }

    .sidebar-modern::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.1);
    }

    .sidebar-modern::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.3);
        border-radius: 3px;
    }

    .sidebar-modern::-webkit-scrollbar-thumb:hover {
        background: rgba(255, 255, 255, 0.5);
    }

    .login-page {
        background: #f0f2f5;
    }
    
    @@media (max-width: 768px) {
        .profile-dropdown {
            min-width: 200px;
        }
        
        .topbar {
            padding: 12px 16px;
        }
    }
</style>

@* Overlay para cerrar el menú al hacer clic fuera *@
@if (mostrarMenuPerfil)
{
    <div class="profile-overlay" @onclick="() => mostrarMenuPerfil = false"></div>
}

<style>
    .profile-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 999;
        background: transparent;
    }
</style>
