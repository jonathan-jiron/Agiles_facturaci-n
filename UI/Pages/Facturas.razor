@page "/facturas"
@attribute [Authorize]
@layout MainLayout
@inject FacturaService FacturaService
@inject NavigationManager Navigation

<PageTitle>Mis Facturas - Sistema de Facturación</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="fw-bold text-primary">
                <i class="fas fa-file-invoice me-2"></i>Mis Facturas
            </h2>
            <p class="text-muted">Historial de facturas generadas</p>
        </div>
        <div class="col-md-6 text-md-end">
            <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/facturacion")'>
                <i class="fas fa-plus me-2"></i>Nueva Factura
            </button>
        </div>
    </div>

    @if (cargando)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-3">Cargando facturas...</p>
        </div>
    }
    else if (!facturas.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                <h4>No hay facturas registradas</h4>
                <p class="text-muted">Comience creando su primera factura</p>
                <button class="btn btn-primary mt-3" @onclick='() => Navigation.NavigateTo("/facturacion")'>
                    <i class="fas fa-plus me-2"></i>Crear Primera Factura
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Número</th>
                                <th>Cliente</th>
                                <th>Fecha</th>
                                <th class="text-end">Total</th>
                                <th>Estado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var factura in facturasPaginadas)
                            {
                                <tr>
                                    <td class="fw-bold">@factura.Numero</td>
                                    <td>@(factura.ClienteNombre ?? "N/A")</td>
                                    <td>@factura.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-end fw-bold text-success">$@factura.Total.ToString("N2")</td>
                                    <td>
                                        <span class="badge @GetEstadoBadgeClass(factura.Estado)">
                                            @factura.Estado
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <button class="btn btn-sm btn-primary me-1" @onclick="() => VerDetalle(factura.Id)"
                                                title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-secondary me-1" disabled
                                                title="Descargar PDF (próximamente)">
                                            <i class="fas fa-file-pdf"></i>
                                        </button>
                                        <button class="btn btn-sm btn-info" disabled
                                                title="Enviar email (próximamente)">
                                            <i class="fas fa-envelope"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (totalPaginas > 1)
                {
                    <nav aria-label="Paginación de facturas">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => CambiarPagina(paginaActual - 1)">
                                    Anterior
                                </button>
                            </li>
                            @for (int i = 1; i <= totalPaginas; i++)
                            {
                                var pagina = i;
                                <li class="page-item @(paginaActual == pagina ? "active" : "")">
                                    <button class="page-link" @onclick="() => CambiarPagina(pagina)">
                                        @pagina
                                    </button>
                                </li>
                            }
                            <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                                <button class="page-link" @onclick="() => CambiarPagina(paginaActual + 1)">
                                    Siguiente
                                </button>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    }
</div>

@if (mostrarDetalle && facturaSeleccionada != null)
{
    <FacturaDetalle Factura="facturaSeleccionada" OnCerrar="CerrarDetalle" />
}

@code {
    private List<FacturaListDto> facturas = new();
    private bool cargando = true;
    private bool mostrarDetalle = false;
    private FacturaDto? facturaSeleccionada;

    private int paginaActual = 1;
    private int itemsPorPagina = 10;
    private int totalPaginas => (int)Math.Ceiling((double)facturas.Count / itemsPorPagina);
    private IEnumerable<FacturaListDto> facturasPaginadas =>
        facturas.Skip((paginaActual - 1) * itemsPorPagina).Take(itemsPorPagina);

    protected override async Task OnInitializedAsync()
    {
        await CargarFacturas();
    }

    private async Task CargarFacturas()
    {
        cargando = true;
        try
        {
            facturas = await FacturaService.ListarFacturasAsync();
            facturas = facturas.OrderByDescending(f => f.Fecha).ToList();
        }
        finally
        {
            cargando = false;
        }
    }

    private async Task VerDetalle(int facturaId)
    {
        var factura = await FacturaService.ObtenerFacturaPorIdAsync(facturaId);
        if (factura != null)
        {
            facturaSeleccionada = factura;
            mostrarDetalle = true;
        }
    }

    private void CerrarDetalle()
    {
        mostrarDetalle = false;
        facturaSeleccionada = null;
    }

    private void CambiarPagina(int nuevaPagina)
    {
        if (nuevaPagina >= 1 && nuevaPagina <= totalPaginas)
        {
            paginaActual = nuevaPagina;
        }
    }

    private string GetEstadoBadgeClass(string estado) => estado?.ToLower() switch
    {
        "autorizada" => "bg-success",
        "generada" => "bg-warning text-dark",
        "rechazada" => "bg-danger",
        "enviada" => "bg-info",
        _ => "bg-secondary"
    };
}
