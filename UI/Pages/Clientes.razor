@page "/clientes"
@inject HttpClient Http
@using System.ComponentModel.DataAnnotations

<h3 class="mb-4"><i class="fa-solid fa-users me-2"></i>Gestión de Clientes</h3>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <button class="btn btn-primary mb-3" @onclick="MostrarFormularioNuevo">
            <i class="fa-solid fa-user-plus"></i> Nuevo Cliente
        </button>

        @if (mostrarFormulario)
        {
            <div class="card border-primary mb-3">
                <div class="card-header bg-primary text-white">
                    <h5>@(clienteEditando.Id == 0 ? "Nuevo Cliente" : "Editar Cliente")</h5>
                </div>
                <div class="card-body">
                    <EditForm Model="@clienteEditando" OnValidSubmit="@GuardarCliente">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nombre Completo *</label>
                                <InputText @bind-Value="clienteEditando.Nombre" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Cédula / RUC *</label>
                                <InputText @bind-Value="clienteEditando.CedulaRuc" class="form-control" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Teléfono</label>
                                <InputText @bind-Value="clienteEditando.Telefono" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Correo Electrónico *</label>
                                <InputText @bind-Value="clienteEditando.Correo" type="email" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Dirección</label>
                            <InputText @bind-Value="clienteEditando.Direccion" class="form-control" />
                        </div>

                        @if (!string.IsNullOrEmpty(mensajeError))
                        {
                            <div class="alert alert-danger">@mensajeError</div>
                        }

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="fa-solid fa-save"></i> Guardar
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="CancelarEdicion">
                                <i class="fa-solid fa-times"></i> Cancelar
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        }

        @if (clientes == null)
        {
            <div class="text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>
        }
        else if (!clientes.Any())
        {
            <div class="alert alert-info">
                <i class="fa-solid fa-info-circle"></i> No hay clientes registrados.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th>Nombre</th>
                            <th>Cédula / RUC</th>
                            <th>Teléfono</th>
                            <th>Correo</th>
                            <th>Dirección</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in clientes)
                        {
                            <tr>
                                <td>@c.Nombre</td>
                                <td>@c.CedulaRuc</td>
                                <td>@c.Telefono</td>
                                <td>@c.Correo</td>
                                <td>@c.Direccion</td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-warning me-1" @onclick="() => EditarCliente(c)">
                                        <i class="fa-solid fa-edit"></i> Editar
                                    </button>
                                    <button class="btn btn-sm btn-danger" @onclick="() => EliminarCliente(c.Id)">
                                        <i class="fa-solid fa-trash"></i> Eliminar
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    private List<Cliente>? clientes;
    private Cliente clienteEditando = new Cliente();
    private bool mostrarFormulario = false;
    private string mensajeError = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await CargarClientes();
    }

    private async Task CargarClientes()
    {
        try
        {
            clientes = await Http.GetFromJsonAsync<List<Cliente>>("api/clientes");
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al cargar clientes: {ex.Message}";
        }
    }

    private void MostrarFormularioNuevo()
    {
        clienteEditando = new Cliente();
        mostrarFormulario = true;
        mensajeError = string.Empty;
    }

    private void EditarCliente(Cliente cliente)
    {
        clienteEditando = new Cliente
        {
            Id = cliente.Id,
            Nombre = cliente.Nombre,
            CedulaRuc = cliente.CedulaRuc,
            Telefono = cliente.Telefono,
            Correo = cliente.Correo,
            Direccion = cliente.Direccion
        };
        mostrarFormulario = true;
        mensajeError = string.Empty;
    }

    private async Task GuardarCliente()
    {
        try
        {
            HttpResponseMessage response;

            if (clienteEditando.Id == 0)
            {
                // Crear nuevo
                response = await Http.PostAsJsonAsync("api/clientes", clienteEditando);
            }
            else
            {
                // Actualizar existente
                response = await Http.PutAsJsonAsync($"api/clientes/{clienteEditando.Id}", clienteEditando);
            }

            if (response.IsSuccessStatusCode)
            {
                await CargarClientes();
                CancelarEdicion();
            }
            else
            {
                mensajeError = "Error al guardar el cliente. Verifique los datos.";
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error: {ex.Message}";
        }
    }

    private async Task EliminarCliente(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "¿Está seguro de eliminar este cliente?"))
        {
            try
            {
                var response = await Http.DeleteAsync($"api/clientes/{id}");
                
                if (response.IsSuccessStatusCode)
                {
                    await CargarClientes();
                }
                else
                {
                    mensajeError = "Error al eliminar el cliente.";
                }
            }
            catch (Exception ex)
            {
                mensajeError = $"Error: {ex.Message}";
            }
        }
    }

    private void CancelarEdicion()
    {
        mostrarFormulario = false;
        clienteEditando = new Cliente();
        mensajeError = string.Empty;
    }

    public class Cliente
    {
        public int Id { get; set; }
        
        [Required(ErrorMessage = "El nombre es requerido")]
        public string Nombre { get; set; } = string.Empty;
        
        [Required(ErrorMessage = "La cédula/RUC es requerida")]
        public string CedulaRuc { get; set; } = string.Empty;
        
        public string? Telefono { get; set; }
        
        [Required(ErrorMessage = "El correo es requerido")]
        [EmailAddress(ErrorMessage = "Formato de correo inválido")]
        public string Correo { get; set; } = string.Empty;
        
        public string? Direccion { get; set; }
    }
}
